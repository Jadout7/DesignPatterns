<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ShoppingCart"
             xmlns:vm="clr-namespace:MauiApp1"
             Title="ShoppingCart"
             Padding="20">

    <ContentPage.BindingContext>
        <vm:ShowroomViewModel />
    </ContentPage.BindingContext>
    <StackLayout Margin="20" HorizontalOptions="Center" Spacing="20">
        <Label Text="Shopping Cart" FontSize="Title" HorizontalOptions="Center"/>
        <ListView ItemsSource="{Binding Order.Cars}" HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                            <StackLayout Orientation="Vertical" Spacing="8">
                                <Line X1="0" Y1="0" X2=" 400" Y2="0" Stroke="Black" StrokeThickness="2" HorizontalOptions="Center"></Line>
                                <Label Text="{Binding Cars.Brand, StringFormat='Brand: {0}'}"/>
                                <Label Text="{Binding Cars.Model, StringFormat='Model: {0}'}"/>
                                <Label Text="{Binding Cars.YearMade, StringFormat='Year: {0}'}"/>
                                <Label Text="{Binding Cars.Price, StringFormat='Cost: {0:C}'}" Margin="0,0,0,10"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Line X1="0" Y1="0" X2=" 400" Y2="0" Stroke="Black" StrokeThickness="2" HorizontalOptions="Center"/>
        <Label Text="{Binding TotalPrice, StringFormat='Total Price: {0:C}'}" HorizontalOptions="Center"/>
        <Button Text="Payment" x:Name="ToPayment" Clicked="ToPayment_Clicked"/>
        <Button Text="Back to Showroom" x:Name="CancelCart" Clicked="CancelCart_Clicked"/>
    </StackLayout>
</ContentPage>

    