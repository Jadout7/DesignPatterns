<?xml version=                                                                                                            "1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ShoppingCart"
             xmlns:vm="clr-namespace:MauiApp1"
             xmlns:local="clr-namespace:MauiApp1"
             Title="ShoppingCart">
    <ContentPage.BindingContext>
        <vm:ShoppingCartViewModel/>
    </ContentPage.BindingContext>
    <!-- Feature list -->
    <CollectionView ItemsSource="{Binding OrderGroups}" Margin="20, 0, 20, 0">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label HorizontalOptions="CenterAndExpand" FontAttributes="Bold" Text="{Binding OrderCarType}" FontSize="Title" Margin="0,20,0,15" />
                    <ScrollView Orientation="Horizontal">
                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" BindableLayout.ItemsSource="{Binding Car}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="White" Margin="0,0,20,0" WidthRequest="250" HeightRequest="250">
                                        <StackLayout>
                                            <Image Margin="25,0,25,0"  Source="{Binding ImageSource}" Aspect="AspectFill" />
                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </HorizontalStackLayout>
                    </ScrollView>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
